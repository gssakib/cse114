import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.Scanner;
public class ReformatCode {

	public static void main(String[] args) {
		File in = new File(args[0]);
	    File out = new File(args[1]);
	    
	    Scanner infile = null;
	    PrintWriter outfile = null;
	    
	    String[] splits = args[0].split(".");
	    System.out.println(splits[0]);
		try {
			infile = new Scanner(in);
			outfile = new PrintWriter(out);
		} catch (FileNotFoundException e) {
			
			e.printStackTrace();
		}
		
	    
	    
	      
	      
	      
	    while(infile.hasNext()){
	      if(infile.nextLine().equals("public class " + splits[0])){
	    	  outfile.println("public class " +splits[0] + "{" );
	      }else if(infile.nextLine().equals("public static void main(String[] args)")){
	    	  outfile.println("public static void main(String[] args){" );
	      }else if(infile.nextLine().equals("{")){
	    	  continue;
	      }else{
	    	  outfile.println(infile.nextLine());
	      }

	    }
	    infile.close();
	    outfile.println();

}
}