import java.util.Scanner;
public class GreekMoney {

	public static void main(String[] args) {
		System.out.print("Enter number of oboloi: ");
		Scanner input = new Scanner(System.input);
		
		double oboloi = input.nextDouble();
		
		double talent = oboloi / (60 * 70 * 6.0);
		double rem = oboloi % (60 * 70 * 6);
		
		double mina = rem / (70 * 6.0);
		rem = rem % (70 * 6.0);
		
		double drachma = rem / 6.0;
		oboloi = rem;
		
		
		
		
	}

}
